{
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "declarationDir": "./lib",
        "experimentalDecorators": true,
        "module": "commonjs",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "outDir": "./lib",
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/__tests__/*.*"
    ]
}